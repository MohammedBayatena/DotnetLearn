@{
    ViewBag.Title = "Administration Dashboard";
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/dashboard.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>
    @await RenderSectionAsync("Styles", required: false)
}

<body>
<input type="checkbox" id="toggle-sidebar" hidden>
<aside class="sidebar">

    <div class="d-flex">
        <div class="logo">Administration Dashboard</div>
        <label for="toggle-sidebar" class="toggle-btn">‚è¥</label>
    </div>


    <nav>
        <a asp-controller="Administration" asp-action="Dashboard">Dashboard</a>
        <a asp-controller="Administration" asp-action="UsersList">Users</a>
        <a asp-controller="Administration" asp-action="RolesList">Roles</a>
        <a asp-controller="Administration" asp-action="TeamsList">Teams & Permissions</a>
    </nav>
</aside>

<main class="main">
    @RenderBody()
</main>
</body>


@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}